datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Asset {
  id                  String                @id
  name                String
  location            String
  status              String                // "Active" | "Down" | "Retired"
  lastMaintenanceDate DateTime?
  nextMaintenanceDate DateTime?

  workOrders          WorkOrder[]
  schedules           PreventiveSchedule[]
}

model Technician {
  id        String      @id
  name      String
  email     String
  phone     String?
  active    Boolean      @default(true)

  workOrders WorkOrder[] @relation("TechnicianWorkOrders")
  users      User[]      @relation("UserTechnician")
}

model WorkOrder {
  id           String       @id
  title        String
  description  String?
  priority     String       // "Low" | "Medium" | "High"
  status       String       // "Open" | "In Progress" | "Completed" | "Cancelled"
  createdAt    DateTime     @default(now())
  dueDate      DateTime?
  completedAt  DateTime?

  assetId      String
  asset        Asset        @relation(fields: [assetId], references: [id])

  assignedToId String?
  assignedTo   Technician?  @relation("TechnicianWorkOrders", fields: [assignedToId], references: [id])

  notes        Note[]
}

model Note {
  id          Int       @id @default(autoincrement())
  workOrderId String
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id])
  timestamp   DateTime  @default(now())
  author      String
  text        String
}

model InventoryItem {
  id               String  @id
  name             String
  partNumber       String
  quantityOnHand   Int
  reorderThreshold Int
  location         String?
}

model PreventiveSchedule {
  id            String   @id
  title         String
  assetId       String
  asset         Asset    @relation(fields: [assetId], references: [id])
  frequencyDays Int
  nextDueDate   DateTime
  active        Boolean  @default(true)
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  password     String
  role         String
  technicianId String?
  technician   Technician? @relation("UserTechnician", fields: [technicianId], references: [id])
  accounts     Account[]
  sessions     Session[]
}

// Auth.js / NextAuth supporting models
model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

