datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Asset {
  id                  String    @id
  assetId             Int?      @unique // Numeric Asset ID
  name                String
  location            String
  status              String // "Active" | "Down" | "Retired"
  lastMaintenanceDate DateTime?
  nextMaintenanceDate DateTime?
  
  // New categorization fields
  make                String?
  model               String?
  category            String?
  
  // Parent Asset relationship (for hierarchical assets)
  parentAssetId       String?
  parentAsset         Asset?   @relation("AssetHierarchy", fields: [parentAssetId], references: [id])
  childAssets         Asset[]   @relation("AssetHierarchy")
  parentAssetIdNumber Int?      // Numeric parent asset ID for filtering/sorting
  parentAssetName     String?   // Parent asset name for easy filtering/sorting
  
  // Tool Check-Out fields
  toolCheckOut        Int?      @default(0) // Number of tools checked out
  checkOutRequiresApproval Int? @default(0) // 0 = No approval, 1 = Requires approval
  
  // Default Work Order Template
  defaultWOTemplate   Int?      // Template ID for default work orders

  // Multi-store: optional owning store for this asset.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  workOrders WorkOrder[]
  schedules  PreventiveSchedule[]
  requests   Request[]
  transfers  Transfer[]
  purchaseOrders PurchaseOrder[] @relation("AssetPurchaseOrders")
}

model Vendor {
  id     String  @id
  name   String
  email  String
  phone  String?
  /// Service(s) the vendor provides (e.g. Electrical, HVAC) – entered by admin.
  serviceOn String?
  /// Admin notes about the vendor.
  note   String?
  active Boolean @default(true)
  status String  @default("offline") // "offline" | "online" | "work_assigned"

  // Multi-store: optional store this vendor belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  workOrders     WorkOrder[]     @relation("VendorWorkOrders")
  users          User[]          @relation("UserVendor")
  purchaseOrders PurchaseOrder[] @relation("VendorPurchaseOrders")
}

model WorkOrder {
  id           String       @id
  /// Global human-friendly work order number (e.g. 0001, 0002, ...)
  workOrderNumber Int?      @unique
  title        String
  description  String?
  location     String?      // Location of the issue
  partsRequired Boolean     @default(false) // Whether parts are required
  problemDescription String? // "Where or What is the problem?"
  helpDescription String?   // "How can we help?"
  attachments  String[]     @default([]) // Array of file URLs (images/videos)
  invoices     String[]     @default([]) // Array of file URLs (PDF, JPEG, Excel invoices)
  priority     String       // "Low" | "Medium" | "High"
  status       String       // "Open" | "In Progress" | "Completed" | "Cancelled"
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  dueDate      DateTime?
  completedAt  DateTime?
  shareToken   String?      @unique // Token for external sharing

  // Multi-store: optional store that owns this work order.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  assetId String?
  asset   Asset?  @relation(fields: [assetId], references: [id])

  assignedToId String?
  assignedTo   Vendor? @relation("VendorWorkOrders", fields: [assignedToId], references: [id])

  // Track who created the work order (for USER role notifications)
  createdById     String?
  createdBy       User?   @relation("WorkOrderCreator", fields: [createdById], references: [id])

  /// Reason provided when work order is rejected from Pending Review (emailed to creator)
  rejectionReason String?

  notes Note[]
  transfers Transfer[]
}

model Note {
  id          Int       @id @default(autoincrement())
  workOrderId String
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id])
  timestamp   DateTime  @default(now())
  author      String
  text        String
}

model InventoryItem {
  id               String  @id
  name             String
  partNumber       String
  quantityOnHand   Int
  reorderThreshold Int
  location         String?

  // Multi-store: optional store that owns this inventory item.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
  transfers      Transfer[]
  purchaseItems  PurchaseOrderItem[]
}

model PurchaseOrder {
  id          String   @id @default(cuid())
  poNumber    Int      // Sequential per store, assigned in API
  status      String   // "Draft" | "Pending Approval" | "Approved" | "Ordered" | "Received" | "Cancelled"
  orderDate   DateTime @default(now())
  expectedDate DateTime?
  notes       String?

  storeId String
  store   Store   @relation(fields: [storeId], references: [id])

  vendorId String?
  vendor   Vendor? @relation("VendorPurchaseOrders", fields: [vendorId], references: [id])

  // Optional link to a specific asset
  assetId String?
  asset   Asset?  @relation("AssetPurchaseOrders", fields: [assetId], references: [id])

  items     PurchaseOrderItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PurchaseOrderItem {
  id             String   @id @default(cuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])

  inventoryItemId String?
  inventoryItem   InventoryItem? @relation(fields: [inventoryItemId], references: [id])

  description    String
  quantity       Int
  unitPrice      Float
  totalPrice     Float
}

model PreventiveSchedule {
  id            String   @id
  title         String
  assetId       String
  asset         Asset    @relation(fields: [assetId], references: [id])
  frequencyDays Int
  nextDueDate   DateTime
  active        Boolean  @default(true)

  // Multi-store: optional store this PM schedule belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     String

  // Multi-store: optional store a user is scoped to
  // (MASTER_ADMIN-style users will have storeId = null).
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  vendorId String?
  vendor   Vendor? @relation("UserVendor", fields: [vendorId], references: [id])
  accounts     Account[]
  sessions     Session[]
  createdWorkOrders WorkOrder[] @relation("WorkOrderCreator")
  transfers Transfer[]
}

model Request {
  id               String   @id @default(cuid())
  /// Global human-friendly request number (e.g. 0001, 0002, ...)
  requestNumber    Int      @unique
  title            String
  description      String
  assetId          String?
  asset            Asset?   @relation(fields: [assetId], references: [id])
  priority         String
  status           String
  rejectionReason  String?  // Reason provided when request is rejected (emailed to submitter)
  attachments      String[] @default([]) // Array of file URLs (images/videos)
  createdAt        DateTime @default(now())
  createdBy        String?

  // Multi-store: optional store this request belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
}

model Transfer {
  id              String   @id @default(cuid())
  type            String   // "ASSET" | "INVENTORY"
  assetId         String?  // If type is ASSET
  inventoryItemId String?  // If type is INVENTORY
  quantity        Int?     @default(1) // For inventory transfers
  fromStoreId     String
  fromStore       Store    @relation("TransferFromStore", fields: [fromStoreId], references: [id])
  toStoreId       String
  toStore         Store    @relation("TransferToStore", fields: [toStoreId], references: [id])
  workOrderId     String?  // Optional: link to work order if transfer is related to a work order
  workOrder       WorkOrder? @relation(fields: [workOrderId], references: [id])
  transferredById String?  // User who initiated the transfer
  transferredBy   User?    @relation(fields: [transferredById], references: [id])
  notes           String?  // Reason or notes for the transfer
  createdAt       DateTime @default(now())

  asset         Asset?         @relation(fields: [assetId], references: [id])
  inventoryItem InventoryItem? @relation(fields: [inventoryItemId], references: [id])
}

// Division → District → Store hierarchy
model Division {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  districts District[]
}

model District {
  id         String   @id @default(cuid())
  name       String
  divisionId String
  division   Division @relation(fields: [divisionId], references: [id], onDelete: Restrict)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  stores Store[]
}

// Multi-store / multi-tenant support. For now, storeId fields are optional on
// core entities so existing single-store data keeps working unchanged.
model Store {
  id         String   @id @default(cuid())
  name       String
  code       String?  @unique
  address    String?
  city       String?
  state      String?
  zipCode    String?
  qrCode     String?  @unique // QR code token for public work order form
  districtId String?
  district   District? @relation(fields: [districtId], references: [id], onDelete: SetNull)
  createdAt  DateTime @default(now())

  users          User[]
  vendors        Vendor[]
  assets         Asset[]
  workOrders     WorkOrder[]
  requests       Request[]
  pmSchedules    PreventiveSchedule[]
  inventoryItems InventoryItem[]
  transfersFrom  Transfer[] @relation("TransferFromStore")
  transfersTo    Transfer[] @relation("TransferToStore")
  purchaseOrders PurchaseOrder[]
  categories     StoreCategory[]
}

model StoreCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  description String?
  color     String?
  createdAt DateTime @default(now())

  stores    Store[]
}

// Auth.js / NextAuth supporting models
model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
