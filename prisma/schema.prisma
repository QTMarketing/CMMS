datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Asset {
  id                  String    @id
  name                String
  location            String
  status              String // "Active" | "Down" | "Retired"
  lastMaintenanceDate DateTime?
  nextMaintenanceDate DateTime?

  // Multi-store: optional owning store for this asset.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  workOrders WorkOrder[]
  schedules  PreventiveSchedule[]
  requests   Request[]
}

model Technician {
  id     String  @id
  name   String
  email  String
  phone  String?
  active Boolean @default(true)

  // Multi-store: optional store this technician belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  workOrders WorkOrder[] @relation("TechnicianWorkOrders")
  users      User[]      @relation("UserTechnician")
}

model WorkOrder {
  id          String    @id
  title       String
  description String?
  priority    String // "Low" | "Medium" | "High"
  status      String // "Open" | "In Progress" | "Completed" | "Cancelled"
  createdAt   DateTime  @default(now())
  dueDate     DateTime?
  completedAt DateTime?

  // Multi-store: optional store that owns this work order.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  assetId String
  asset   Asset  @relation(fields: [assetId], references: [id])

  assignedToId String?
  assignedTo   Technician? @relation("TechnicianWorkOrders", fields: [assignedToId], references: [id])

  notes Note[]
}

model Note {
  id          Int       @id @default(autoincrement())
  workOrderId String
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id])
  timestamp   DateTime  @default(now())
  author      String
  text        String
}

model InventoryItem {
  id               String  @id
  name             String
  partNumber       String
  quantityOnHand   Int
  reorderThreshold Int
  location         String?

  // Multi-store: optional store that owns this inventory item.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
}

model PreventiveSchedule {
  id            String   @id
  title         String
  assetId       String
  asset         Asset    @relation(fields: [assetId], references: [id])
  frequencyDays Int
  nextDueDate   DateTime
  active        Boolean  @default(true)

  // Multi-store: optional store this PM schedule belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     String

  // Multi-store: optional store a user is scoped to
  // (MASTER_ADMIN-style users will have storeId = null).
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])

  technicianId String?
  technician   Technician? @relation("UserTechnician", fields: [technicianId], references: [id])
  accounts     Account[]
  sessions     Session[]
}

model Request {
  id          String   @id @default(cuid())
  title       String
  description String
  assetId     String?
  asset       Asset?   @relation(fields: [assetId], references: [id])
  priority    String
  status      String
  createdAt   DateTime @default(now())
  createdBy   String?

  // Multi-store: optional store this request belongs to.
  storeId String?
  store   Store?  @relation(fields: [storeId], references: [id])
}

// Multi-store / multi-tenant support. For now, storeId fields are optional on
// core entities so existing single-store data keeps working unchanged.
model Store {
  id        String   @id @default(cuid())
  name      String
  code      String?  @unique
  address   String?
  city      String?
  state     String?
  timezone  String?
  createdAt DateTime @default(now())

  users          User[]
  technicians    Technician[]
  assets         Asset[]
  workOrders     WorkOrder[]
  requests       Request[]
  pmSchedules    PreventiveSchedule[]
  inventoryItems InventoryItem[]
}

// Auth.js / NextAuth supporting models
model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
